@model Estacionamento.Models.Marca

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Marca</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MARID)

        <div class="form-group">
          Descrição
            <div class="col-md-10">
                @Html.EditorFor(model => model.MARDESCRICAO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MARDESCRICAO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Ativo
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gravar" class="btn btn-success" />
                <a class="btn btn-primary" href="/Marca/Index">Voltar</a>
            </div>
        </div>
    </div>
}

<div>
    
    @*Html.ActionLink("Voltar", "Index")*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
